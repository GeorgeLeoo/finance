/* pages/search/search.wxss */
.search-icon{
    width: 20px;
    height: 20px;
    margin: 0 10px;
}
.search{
    background-color: #EB4D45;
    padding: 10px 20px;
    box-shadow: 0 3px 10px #ccc;
    margin-bottom: 10px;
}
.search-inner{
    display: flex;
    width: 100%;
    height: 30px;
    line-height: 30px;
    align-items: center;
    background-color: #fff;
    border-radius: 20px;
}
.search-inner input{
    width: calc(100vw - 60px);
    font-size: 14px;
    color: #333;
}
.item{
    padding: 10px;
    /* border-bottom: 1px solid #eee; */

}
.item image{
    width: 30px;
    height: 30px;
    border-radius: 100%;
    margin-right: 10px;
    padding: 10px;

}
.item-top{
    /* font-size: 12px; */
    padding-bottom: 10px;

}
.item-bottom{
    box-shadow: 0 0 10px #ccc;
    /* margin: 10px; */
    border-radius: 10px;
    padding: 10px;
}
.item-bottom-left{
    display: flex;
    align-items: center;
}
.notes{
    color: #B5B5B5;
    font-size: 12px;
}
.text{
    display: flex;
    flex-direction: column;
}
.name{
    /* font-size: 14px; */
    color: #999999;
}
.item-bottom{
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.green {
    color: #5897f3;
}

.red {
    color: #eb4d45;
}

.bg_green {
    background-color: #5897f3;
}

.bg_red {
    background-color: #eb4d45;
}