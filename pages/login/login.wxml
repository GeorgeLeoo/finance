<!-- 登录 -->
<view class='container'>
    <logo></logo>
    <form class='login-form' method='post' action=''>
        <view class='login-form-input-group'>
            <view>
                <input class='login-input' type='text' data-type="{{INPUT_TYPE_MAP.PHONE}}" placeholder='请输入手机号' value='{{user.tel}}'
                       bindinput='handlerWatchInput'/>
            </view>
            <view>
                <input class='login-input' data-type="{{INPUT_TYPE_MAP.PASSWORD}}" placeholder='请输入密码' password value='{{user.pwd}}' bindinput='handlerWatchInput'/>
            </view>
        </view>
        <view class='login-btn-wrapper'>
            <button class='login-btn' disabled='{{!canLogin}}' bindtap='handleLogin'>登录</button>
        </view>
        <view class='login-bot'>
<!--            <navigator hover-class="none" url='./../forget/forget'>-->
<!--                <text>忘记密码</text>-->
<!--            </navigator>-->
            <navigator hover-class="none" url='./../register/register?pageType=PWD'>
                <text>忘记密码</text>
            </navigator>
            <navigator hover-class="none" url='./../register/register?pageType=REG'>
                <text>新用户注册</text>
            </navigator>
        </view>
    </form>
    <login-reg-footer hint="其它登录方式"></login-reg-footer>
</view>
